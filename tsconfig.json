{
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "lib": ["dom", "esnext"],
    "types": ["node"],
    "jsx": "react"
  }
}
